<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<PropertyGroup>
		<PackageId>PigeonWatcher.FluentAttributes</PackageId>
		<Version>1.0.0</Version>
		<Authors>PigeonWatcher</Authors>
		<Description>An attribute library for .NET that uses a fluent interface for applying attributes to classes, structs, properties, etc. </Description>
		<PackageTags>attributes;fluent;library;utility</PackageTags>
		<RepositoryUrl>https://github.com/pigeonwatcher/FluentAttributes</RepositoryUrl>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Title>Fluent Attributes</Title>
	</PropertyGroup>

</Project>
